<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >
<!--TODO: add servlet 3.0 support-->
<web-app>
  <display-name>Archetype Created Web Application</display-name>
    
  <servlet>
      <servlet-name>imageServlet</servlet-name>
      <servlet-class>controllers.ImageServlet</servlet-class>
  </servlet>  
    
  <servlet>
    <servlet-name>signInServlet</servlet-name>
    <servlet-class>controllers.SignInServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>logoutServlet</servlet-name>
    <servlet-class>controllers.LogoutServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>registrationServlet</servlet-name>
    <servlet-class>controllers.RegistrationServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>downloadAvatarServlet</servlet-name>
    <servlet-class>controllers.DownloadAvatarServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>TestServlet</servlet-name>
    <servlet-class>controllers.TestServlet</servlet-class>
  </servlet>
    
  <servlet-mapping>
      <servlet-name>imageServlet</servlet-name>
      <url-pattern>/image/*</url-pattern>
  </servlet-mapping>  

  <servlet-mapping>
    <servlet-name>registrationServlet</servlet-name>
    <url-pattern>/registration</url-pattern>
  </servlet-mapping>


  <servlet-mapping>
    <servlet-name>TestServlet</servlet-name>
    <url-pattern>/test</url-pattern>
  </servlet-mapping>



  <servlet-mapping>
    <servlet-name>downloadAvatarServlet</servlet-name>
    <url-pattern>/downloadAvatar</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>signInServlet</servlet-name>
    <url-pattern>/signInServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>logoutServlet</servlet-name>
    <url-pattern>/logoutServlet</url-pattern>
  </servlet-mapping>
</web-app>
